@model IEnumerable<PracticeShop.Data.Models.User>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(x => x.CreatedDate)</th>
                        <th>@Html.DisplayNameFor(x => x.UserName)</th>
                        <th>@Html.DisplayNameFor(x => x.Name)</th>
                        <th>@Html.DisplayNameFor(x => x.Address)</th>
                        <th>@Html.DisplayNameFor(x => x.Email)</th>
                        <th>@Html.DisplayNameFor(x => x.Phone)</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>@Html.DisplayNameFor(x => x.CreatedDate)</th>
                        <th>@Html.DisplayNameFor(x => x.UserName)</th>
                        <th>@Html.DisplayNameFor(x => x.Name)</th>
                        <th>@Html.DisplayNameFor(x => x.Address)</th>
                        <th>@Html.DisplayNameFor(x => x.Email)</th>
                        <th>@Html.DisplayNameFor(x => x.Phone)</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(x=>item.CreatedDate)</td>
                            <td>@Html.DisplayFor(x => item.UserName)</td>
                            <td>@Html.DisplayFor(x => item.Name)</td>
                            <td>@Html.DisplayFor(x => item.Address)</td>
                            <td>@Html.DisplayFor(x => item.Email)</td>
                            <td>@Html.DisplayFor(x => item.Phone)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
